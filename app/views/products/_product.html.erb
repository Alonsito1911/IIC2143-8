
<%= link_to product_path(product.id), class: 'product bg-orange-200 mb-2 rounded-2xl lg:w-[calc(25%_-_.5rem)] sm:w-[calc(33.33333%_-_.5rem)]', 'data-turbo-frame': '_top' do %>
    <%= image_tag product.picture, width: 200 , class: "w-full rounded-2xl h-60 object-cover" if product.picture.attached?%>
    <div>
        <span class= "font-bold text-xl mx-2"><%=product.price%>$</span>
        <h2 class= "mx-2"><%= product.title %>|</h2>
        <p class= "text-gray-500 text-sm mt-2 mx-2"><%= product.description %></p>
        
    </div>
<%end%>
