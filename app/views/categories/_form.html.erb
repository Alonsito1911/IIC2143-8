
<%= form_with model: @category, url: create_category_path do |form| %>

   <% @category.errors.full_messages.each do |error|%>
    <%= error%>
   <% end%>
   <%= form.label :tipo, class: "text-orange-400 m-2"%>
   <div>
   <%= form.text_field :tipo, class: "my-2 rounded-2xl border-white-950 "%>
   <div>

   <%= form.submit class: "bg-orange-200 text-gray-600 px-4 py-2 rounded-2xl drop-shadow-sm hover:bg-gray-300"%>

<%end%>
