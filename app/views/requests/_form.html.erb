<%= form_with model: @request do |form| %>
   <div class = "text-orange-200">
      <% @request.errors.full_messages.each do |error|%>
      <%= error%>
      <% end%>
      <%= form.label :email, class: "m-2"%>
      <div>
      
      <%= form.text_field :email, class: "m-2"%>
      <div>
      <%= form.label :adress%>
      <div>
      
      <%= form.text_field :adress, class: "m-2"%>
      <div>
      <%= form.label  :amount, class: "m-2"%>
      <div>
      
      <%= form.number_field :amount, class: "m-2"%>
      <div>
   </div>
   <%= form.submit  class: "bg-orange-200 m-2 text-gray-600 px-4 py-2 my-2 rounded-2xl drop-shadow-sm hover:bg-gray-300"%>

<%end%>
